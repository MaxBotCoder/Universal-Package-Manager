pragma solidity 0.8.9;

contract buyer{

    bool public own = false;

    uint public moneysent;

    address public whoshouldIPay;

    constructor (address _whotopay) payable {

        whoshouldIPay = _whotopay;

        if(msg.value == 1) {

            payable(whoshouldIPay).transfer(msg.value);

            moneysent = msg.value;

            own = true;

        }


    }

}
